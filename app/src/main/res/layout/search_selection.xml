<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/et_startTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/et_endTime"
        android:layout_below="@+id/et_startTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ibtn_search"
        android:background="@drawable/bar_search"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btn_startTime"
        android:layout_above="@+id/et_endTime"
        android:layout_toLeftOf="@+id/ibtn_search"
        android:layout_toStartOf="@+id/ibtn_search"
        android:background="@drawable/set_calender"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btn_endTime"
        android:layout_below="@+id/et_startTime"
        android:layout_alignLeft="@+id/btn_startTime"
        android:layout_alignStart="@+id/btn_startTime"
        android:background="@drawable/set_calender"/>

</RelativeLayout>
